class Solution:

    def onlyAlphanumeric(self, s: str) -> str:
        return ''.join(c for c in s if c.isalnum()).lower()

    def isPalindrome(self, s: str) -> bool:
        word = Solution.onlyAlphanumeric(Solution, s)
        word.lower()

        left = 0 
        right = len(word)-1
        while left <= right:
            letter1 = word[left]
            letter2 = word[right]

            if letter1 != letter2:
                return False
            elif left < right:
                left+=1
                right-=1
            else:
                return True
            
        return True
    
print(Solution.isPalindrome(Solution, "racehcar"))